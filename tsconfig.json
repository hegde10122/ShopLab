{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
     "target": "esnext",
    "module": "esnext",
    "jsx": "react-jsx",         // ðŸ‘ˆ tells TS how to handle JSX
    "moduleResolution": "node",
    "allowJs": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "noEmit": true
  },
  "include": ["src"]
}
